<%- include ('_layouts/adminheader') -%>
<br>
<br>
<br>
<br>
<link rel="stylesheet" href="../css/admin.css">

<h2 class="page-title">Products</h2>
<a href="products/add-product" class="btn btn-primary">Add a new product</a>
<br><br>
<% if(errors){ %>
    <% errors.forEach(function(error){ %>
      <div class="alert alert-danger">
        <%= error.msg %>
      </div>
   <% }); %>
  <% } %>
<% if (locals.messages) { %>
    <h1 style="color: brown;"> <b> <%= messages.danger %></b></h1>
          <% } %>
          <% if (locals.messages) { %>
  
            <h1 style="color:burlywood;"> <b>      <%= messages.success %> </b></h1>
                <% } %>
   
<table class="table table-striped alignmiddle">
  <thead>
    <tr class="home">
        <th><b>Products</b></th>
        <th><b>Price</b></th>
        <th><b>Category</b></th>
        <th><b>Product Image</b></th>


    </tr>
    </thead> 
        <tbody>
            <%products.forEach(function(product){%>
                <tr>
                    <td><%=product.title%></td>
                    <td><%=product.price%></td>
                    <td><%=product.category%></td>
                    <td>
                      
                      
                        <img id="noImage"  src="../images/product_images/<%=product.id %>/<%=product.image%>"  alt="">
                </td>
                    <td><a  onclick = "if (! confirm('Are you sure?')) { return false; }" href="products/delete-product/<%=product._id%>">Delete</a></td>
                </tr>
<% }); %>
            </tbody>
            </table>