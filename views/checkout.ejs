<%- include ('_layouts/header2') -%>

<link rel="stylesheet" href="../css/products.css">

<br>
<div class="row_products1">
<h1 class="page-title">My Cart</h1>
<br>

<% if(typeof (cart) !=="undefined") {%>
 <table class="table table-striped alignmiddle">   
     <tr>
         <th>Image</th>
         <th>Title</th>
         <th>Price</th>
         <th>Quantity</th>
         <th></th>
         <th>Sub Total</th>
    </tr>
    <% var total=0;%>

    <% cart.forEach(function(product){%>
    <% var sub=product.qty*product.price%>
    <% total += +sub%>
        <tr>
            <td><img class="cpi" src="<%=product.image%>" alt=""></td>
            <td><%=product.title%></td>
             <td>NRs.<%=product.price%></td>
             <td><%=product.qty%></td>

            <td>
                <a href="/cart/update/<%=product.title%>?action=add">+</a>&nbsp;
                <a href="/cart/update/<%=product.title%>?action=remove">-</a>&nbsp;
                <a href="/cart/update/<%=product.title%>?action=clear">Clear</a>&nbsp;

            </td>

            <td>NRs.<%=sub%></td>
       </tr> 
       
<%});%>
<tr>
    <td colspan="6" align="right"><h3><b>Total:</b>Nrs.<%=total%></h3></td>
</tr> 
<tr>
    <td colspan="6" align="right">
        <a class=" clearcart btn btn-danger" href="/cart/clear">Clear Cart</a>
    </td>
</tr>
<tr>
    <td colspan="6" align="right">
        <a class="btn btn-primary buy_now" href="#">Buy now</a>
    </td>
</tr>
    </table>
<%} else{%>
<h3 class="text-center">Your Cart is Empty</h3>
<%}%>
</div>
<script>
    $(function(){
        $('a.clearcart').on('click',function(){
        if(!confirm('confirm clear cart?'))
        return false;
    });
    })
 </script>