<%- include ('_layouts/header1') -%>
<link rel="stylesheet" href="../css/login.css">

     
<div class="App">
          <div class="App__Form">
            
        <div class="FormCenter">
        
           <% if(errors){ %>
            <% errors.forEach(function(error){ %>
              <div class="alert alert-danger">
                <%= error.msg %>
              </div>
           <% }); %>
          <% } %>
          
          <% if (locals.messages) { %>
          <h1 style="color: brown;"> 
            <b> <%= messages.danger %></b>
          </h1>
                <% } %>

            <form class="FormFields" action="/users/signinform" method="POST">
              <br>
              <br>
            </br>
            <div class="FormField">
                <label class="FormField__Label" >Username</label>
                <input type="text" id="username" class="FormField__Input" placeholder="Enter your username" name="username" value="" required/>
              </div>
              <br>
            </br>
              <div class="FormField">
                <label class="FormField__Label" >Password</label>
                <input type="password" id="password" class="FormField__Input" placeholder="Enter your password" name="password" value=""required/>
              </div>
 <div class="FormField">
                  <button class="FormField__Button mr-20" type="submit">Sign In</button> 
               <!--   <button class="FormField__Button mr-30" type="submit">As Vendor</button> -->
              </div>
            </form>
          </div>
          </div>
</div>
